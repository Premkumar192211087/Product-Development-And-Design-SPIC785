<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Default background color - can be overridden programmatically -->
    <solid android:color="@color/status_default" />

    <!-- Rounded corners for badge appearance -->
    <corners android:radius="12dp" />

    <!-- Optional stroke for better definition -->
    <stroke
        android:width="1dp"
        android:color="@color/status_border" />

</shape>