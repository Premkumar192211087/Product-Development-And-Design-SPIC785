<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_po"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Purchase Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_po_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PO Number:  "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Vendor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/spinner_vendor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:spinnerMode="dropdown" />

            <!-- Order Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_order_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusable="false"
                android:hint="Select order date"
                android:drawableEnd="@drawable/ic_calendar"
                android:inputType="date" />

            <!-- Expected Delivery Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Delivery"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_expected_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusable="false"
                android:hint="Select delivery date"
                android:drawableEnd="@drawable/ic_calendar"
                android:inputType="date" />

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/spinner_status"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:spinnerMode="dropdown" />

            <!-- Items Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <!-- Add Item Button -->
            <Button
                android:id="@+id/btn_add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:layout_marginTop="8dp" />

            <!-- Total Amount -->
            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: $0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="16dp" />

            <!-- Generate Bill Option -->
            <CheckBox
                android:id="@+id/cb_generate_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Bill Automatically"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_po"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place order"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white" />

</LinearLayout>
