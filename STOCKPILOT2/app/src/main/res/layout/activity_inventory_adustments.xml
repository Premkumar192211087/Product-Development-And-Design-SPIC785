<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Store Name"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:contentDescription="Filter" />

    </LinearLayout>

    <!-- Filter Panel (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/filterPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Adjustments"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Movement Type Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Movement Type:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/spinnerMovementType"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginStart="8dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <!-- Reference Type Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reference Type:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/spinnerReferenceType"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginStart="8dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <!-- Date From -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date From:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/etDateFrom"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@android:drawable/edit_text"
                android:hint="Select start date"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp" />

        </LinearLayout>

        <!-- Date To -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date To:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/etDateTo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@android:drawable/edit_text"
                android:hint="Select end date"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp" />

        </LinearLayout>

        <!-- Filter Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnApplyFilter"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_bright"
                android:text="Apply Filter"
                android:textAllCaps="false"
                android:textColor="#6D4C41"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnClearFilter"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_default"
                android:text="Clear Filter"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/filterPanel"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:hint="Search adjustments..."
            android:textColor="@android:color/black"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Quick Filter Spinners in Search Bar -->
        <Spinner
            android:id="@+id/spinnerQuickFilter"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <!-- Adjustments List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAdjustments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBar"
        android:contentDescription="Adjustments list"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBar"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:alpha="0.3" />

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No adjustments found"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Try adjusting your filters or add a new adjustment"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginHorizontal="32dp" />

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAdjustment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@android:color/holo_blue_bright"
        app:tint="@android:color/white"
        android:contentDescription="Add adjustment" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Filter Toggle Button (if you want to hide/show filter panel) -->
    <Button
        android:id="@+id/btnToggleFilter"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/topBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/btn_default"
        android:text="Toggle Filters"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:padding="8dp"
        android:visibility="gone" />

</RelativeLayout>