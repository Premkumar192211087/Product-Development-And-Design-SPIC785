<?xml version="1.0" encoding="utf-8"?>
<!-- item_invoice_product.xml - For CreateInvoiceActivity RecyclerView -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:id="@+id/main"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Product Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <ImageButton
                android:id="@+id/btn_remove_item"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Remove Item"
                app:tint="@color/error" />

        </LinearLayout>

        <!-- Quantity Section (Full Width) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_decrease_qty"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_minus"
                    android:background="@drawable/button_quantity"
                    android:contentDescription="Decrease Quantity" />

                <EditText
                    android:id="@+id/et_quantity"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/edit_text_quanity"
                    android:layout_marginHorizontal="6dp" />

                <ImageButton
                    android:id="@+id/btn_increase_qty"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add2"
                    android:background="@drawable/button_quantity"
                    android:contentDescription="Increase Quantity" />

            </LinearLayout>

        </LinearLayout>

        <!-- Price and Total Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Unit Price Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unit Price"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_unit_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:minWidth="100dp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Total Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_item_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:gravity="center_vertical|end"
                    android:minHeight="48dp"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Product Info (SKU, Category) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:id="@+id/layout_product_info">

            <TextView
                android:id="@+id/tv_product_sku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SKU: ABC123"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_product_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category: Electronics"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>