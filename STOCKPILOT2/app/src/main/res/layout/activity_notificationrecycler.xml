<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:background="@color/background_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <!-- Notification Type Icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/iv_notification_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:src="@drawable/ic_notification_default"
                app:tint="@color/white" />

        </FrameLayout>

        <!-- Notification Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Notification Title -->
            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/low_stock_alert"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Notification Message -->
            <TextView
                android:id="@+id/tv_notification_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product running low on stock"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Notification Timestamp -->
            <TextView
                android:id="@+id/tv_notification_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Notification Status Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <!-- Read/Unread Status Dot -->
            <View
                android:id="@+id/view_status_indicator"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_indicator" />

            <!-- Type Badge -->
            <TextView
                android:id="@+id/tv_notification_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOW STOCK"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimaryDark"
                android:background="@drawable/type_badge_background"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>