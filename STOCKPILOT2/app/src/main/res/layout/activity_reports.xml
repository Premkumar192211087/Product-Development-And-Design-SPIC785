<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/reports_dashboard"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
        app:titleTextColor="@android:color/black" />

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollReports"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Date Range Spinner -->
            <Spinner
                android:id="@+id/spinnerDateRange"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:entries="@array/date_range_options"
                android:spinnerMode="dropdown"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp" />

            <!-- Filters Row -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/filtersRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerDateRange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchReports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:queryHint="@string/search_hint"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnExportCSV"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportCSV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/export"
                    app:icon="@drawable/ic_export"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Financial Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFinancial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/filtersRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvFinancialTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/financial_summary"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvFinancialSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/financial_subtitle"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvFinancialTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" />

                    <!-- Financial Metrics -->
                    <LinearLayout
                        android:id="@+id/financialMetrics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintTop_toBottomOf="@id/tvFinancialSubtitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvTotalRevenue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/revenue"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvTotalCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cost"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvNetProfit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/net_profit"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Revenue Trend Chart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartRevenueTrend"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/financialMetrics"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />

                    <!-- Revenue by Category Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chartRevenueByCategory"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/chartRevenueTrend"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Inventory Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardFinancial"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvInventoryTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/inventory_snapshot"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvInventorySubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/inventory_subtitle"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvInventoryTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" />

                    <!-- Inventory Metrics -->
                    <LinearLayout
                        android:id="@+id/inventoryMetrics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@id/tvInventorySubtitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvTotalSKUs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/total_skus"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvLowStockCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/low_stock"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Stock by Product Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartStockByProduct"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/inventoryMetrics"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />

                    <!-- Low Stock Items -->
                    <TextView
                        android:id="@+id/tvLowStockListTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/low_stock_items"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/chartStockByProduct"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvLowStock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/tvLowStockListTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sales Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardInventory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSalesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sales_overview"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvSalesSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sales_subtitle"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvSalesTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" />

                    <!-- Chart Toggle -->
                    <RadioGroup
                        android:id="@+id/chartToggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/segmented_control_background"
                        app:layout_constraintTop_toBottomOf="@id/tvSalesSubtitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:padding="4dp">

                        <RadioButton
                            android:id="@+id/rbTopProducts"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/top_products"
                            android:textColor="@color/segmented_text"
                            style="@style/SegmentedRadioButton" />

                        <RadioButton
                            android:id="@+id/rbSalesTimeline"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/timeline"
                            android:textColor="@color/segmented_text"
                            style="@style/SegmentedRadioButton" />
                    </RadioGroup>

                    <!-- Top Products Chart -->
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/chartTopProducts"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/chartToggle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:visibility="visible" />

                    <!-- Sales Timeline Chart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartSalesTimeline"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/chartToggle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />

                    <!-- Recent Invoices -->
                    <TextView
                        android:id="@+id/tvRecentInvoices"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/recent_invoices"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/chartTopProducts"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecentInvoices"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/tvRecentInvoices"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>