<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SalesOrdersActivity">

    <!-- Top Bar with Back and Add Sale -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Store Name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <ImageView
            android:id="@+id/iv_add_sale"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:contentDescription="@string/add_sale"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_add"
            app:tint="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Filter Toggle Header -->
    <LinearLayout
        android:id="@+id/layout_filter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/card_background"
        android:elevation="2dp"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filters"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/iv_filter_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/text_secondary"
            android:src="@drawable/ic_expand_more" />

    </LinearLayout>

    <!-- Filter Content -->
    <LinearLayout
        android:id="@+id/layout_filter_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/card_background"
        android:elevation="2dp"
        android:padding="16dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp">

        <!-- Row 1: Date Range and Payment Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_range"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:paddingBottom="4dp" />

                <Spinner
                    android:id="@+id/spinner_date_range"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_status"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:paddingBottom="4dp" />

                <Spinner
                    android:id="@+id/spinner_payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </LinearLayout>

        <!-- Row 2: Payment Method and Amount Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:paddingBottom="4dp" />

                <Spinner
                    android:id="@+id/spinner_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_range"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:paddingBottom="4dp" />

                <Spinner
                    android:id="@+id/spinner_amount_range"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </LinearLayout>

        <!-- Search and Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="@string/search_placeholder"
                android:background="@drawable/edittext_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/search"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:minWidth="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_clear_filters"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/clear"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:minWidth="80dp" />

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/apply"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:minWidth="80dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Summary panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_orders"
                android:textAppearance="?attr/textAppearanceCaption" />

            <TextView
                android:id="@+id/tv_total_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textAppearance="?attr/textAppearanceCaption" />

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- List of sales orders -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sales_orders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/activity_sales_order_recyler" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_marginTop="16dp" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/no_orders"
            android:src="@drawable/ic_empty_orders"
            app:tint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_orders"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/gray"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_changing_filters"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>
