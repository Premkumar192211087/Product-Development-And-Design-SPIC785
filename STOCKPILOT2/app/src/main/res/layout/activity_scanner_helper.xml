<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:zxing_preview_scaling_strategy="fitCenter"
        app:zxing_use_texture_view="true"
        app:zxing_scanner_layout="@layout/acitvity_custom_barcode_sacnner"
        app:zxing_framing_rect_width="280dp"
        app:zxing_framing_rect_height="200dp">
    </com.journeyapps.barcodescanner.DecoratedBarcodeView>

    <Button
        android:id="@+id/switch_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="#80000000"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Turn flash ON" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="Align barcode within frame"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>