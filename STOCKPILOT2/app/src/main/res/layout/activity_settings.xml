<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Store Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Settings Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Account Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Profile Option -->
        <LinearLayout
            android:id="@+id/profileContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:layout_gravity="center_vertical"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_gravity="center_vertical"
                android:contentDescription="Go to Profile" />
        </LinearLayout>

        <!-- Security Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_security"
                android:layout_gravity="center_vertical"
                android:contentDescription="Security" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_gravity="center_vertical"
                android:contentDescription="Go to Security" />
        </LinearLayout>

        <!-- Preferences Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Notifications Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                android:layout_gravity="center_vertical"
                android:contentDescription="Notifications" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:checked="true" />
        </LinearLayout>
        
        <!-- Low Stock Notifications Option -->
        <LinearLayout
            android:id="@+id/lowStockNotificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp">

            <!-- Low Stock Switch Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:drawable/btn_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_inventory"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Low Stock Notifications" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Low Stock Alerts"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical" />

                <Switch
                    android:id="@+id/switchLowStockNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true" />
            </LinearLayout>

            <!-- Low Stock Threshold Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:drawable/btn_default"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Low Stock Threshold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Low Stock Threshold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvLowStockThreshold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Expiry Notifications Option -->
        <LinearLayout
            android:id="@+id/expiryNotificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp">

            <!-- Expiry Switch Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:drawable/btn_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calender"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Expiry Notifications" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Expiry Date Alerts"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical" />

                <Switch
                    android:id="@+id/switchExpiryNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true" />
            </LinearLayout>

            <!-- Expiry Days Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:drawable/btn_default"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Expiry Days Threshold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Days Before Expiry to Notify"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvExpiryDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Damaged Items Notifications Option -->
        <LinearLayout
            android:id="@+id/damagedItemsNotificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:layout_gravity="center_vertical"
                android:contentDescription="Damaged Items Notifications" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Damaged Items Alerts"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <Switch
                android:id="@+id/switchDamagedItemsNotifications"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:checked="true" />
        </LinearLayout>

        <!-- Dark Mode Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dark_mode"
                android:layout_gravity="center_vertical"
                android:contentDescription="Dark Mode" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Language Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_language"
                android:layout_gravity="center_vertical"
                android:contentDescription="Language" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_gravity="center_vertical"
                android:contentDescription="Select Language" />
        </LinearLayout>

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Help & Support Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help"
                android:layout_gravity="center_vertical"
                android:contentDescription="Help &amp; Support" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help &amp; Support"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_gravity="center_vertical"
                android:contentDescription="Go to Help &amp; Support" />
        </LinearLayout>

        <!-- About Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:drawable/btn_default"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_gravity="center_vertical"
                android:contentDescription="About" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_gravity="center_vertical"
                android:contentDescription="Go to About" />
        </LinearLayout>

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>