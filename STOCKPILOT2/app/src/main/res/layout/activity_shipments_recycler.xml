<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShipmentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SH-2024-001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Order: PO-2024-001"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvShipmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/status_pending"
            android:padding="6dp"
            android:textAllCaps="true" />

    </LinearLayout>

    <!-- Shipment Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <!-- Carrier and Tracking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_local_shipping"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvCarrierInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="FedEx - 1234567890"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Recipient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person_outline"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvRecipientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="John Doe"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calender"
                app:tint="#666666" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvShipDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped: 2024-01-15"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvEstimatedDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Est. Delivery: 2024-01-18"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

        <!-- Cost -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_attach_money"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvShippingCost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Shipping Cost: $25.00"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="View Details"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:background="@drawable/button_outline"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnTrackShipment"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Track"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
