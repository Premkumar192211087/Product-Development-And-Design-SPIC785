<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp">

        <!-- Vendor Avatar -->
        <TextView
            android:id="@+id/tv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="V"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginRight="16dp" />

        <!-- Vendor Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_vendor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vendor Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:background="@drawable/status_badge_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <!-- Contact Person -->
            <TextView
                android:id="@+id/tv_contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Person"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_person_small"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Email -->
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vendor@email.com"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Phone -->
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 9876543210"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Outstanding Balance -->
            <TextView
                android:id="@+id/tv_outstanding_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outstanding: $0.00"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_attach_money"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center">

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit vendor"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:layout_marginBottom="4dp" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete vendor"
                android:padding="6dp"
                android:scaleType="centerInside"
                app:tint="#FF0000" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>