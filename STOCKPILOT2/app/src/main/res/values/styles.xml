<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- AppBar and Popup styles for compatibility -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
    
    <!-- Add missing styles referenced in layouts -->
    <style name="AppTheme.stockpilot" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="AppTheme.stockpilit" parent="ThemeOverlay.Material3.Light" />

        <style name="TextAppearance.AppCompat.Title" parent="TextAppearance.AppCompat">
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="SegmentedRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
            <item name="android:background">@drawable/segmented_button_background</item>
            <item name="android:textAlignment">center</item>
            <item name="android:padding">8dp</item>
            <item name="android:textSize">14sp</item>
            <item name="android:button">@null</item>
            <item name="android:textColor">@color/segmented_text</item>
        </style>

        <!-- Base app theme -->
        <style name="Theme.STOCKPILOT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your primary/secondary colors here -->
            <item name="colorPrimary">@color/primary</item>
            <item name="colorPrimaryVariant">@color/primary_variant</item>
            <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
            <item name="colorSecondary">@color/secondary</item>
            <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
            <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
            <!-- Other theme customizations -->
        </style>

        <!-- Overlay style for AppBar -->
        <style name="Theme.STOCKPILOT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Overlay style for Popup -->
        <style name="Theme.STOCKPILOT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>